

*:/mbg [$=''] = >>>
	_assertperm('mod')
	if($ == ''){
		die('TODO')	
	}
	@source = import('sharedata.source')
	_store_shared_value(array(
		filter: 'globalmodchat',
		data: array(
			message: $,
			source: @source,
			player: player(),
		)
	))
	_global_do_modchat(@source, player(), $)
