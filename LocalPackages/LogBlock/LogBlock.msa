#safeguard
*:/lb redo [$] = >>>
	_assertperm('mod', 0)
	if (equals($, 'last'), run('/lb redo last') die())
	if (lt(reg_count('player', $), 1), die(concat(color(red), 'lol, you forgot the player')), run(/lb redo $))
